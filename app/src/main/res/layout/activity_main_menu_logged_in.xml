<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.wofford.sykesda.wocoapptest.MainMenuLoggedIn">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TableRow android:layout_weight=".3">
                <ImageButton android:src="@android:drawable/ic_menu_compass" android:layout_weight=".3" android:layout_height="match_parent" android:id="@+id/mapActivityBttn"/>

                <ImageButton
                    android:id="@+id/tvGuideBtn"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:src="@android:drawable/ic_media_play" />

                <ImageButton
                    android:id="@+id/directoryBtn"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:src="@android:drawable/ic_menu_crop" />
            </TableRow>

            <TableRow android:layout_weight=".3">

                <ImageButton
                    android:id="@+id/emerGolfActBtn"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:src="@android:drawable/ic_menu_view" />

                <ImageButton
                    android:id="@+id/classScheduleBtn"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:src="@android:drawable/ic_menu_send" />

                <ImageButton
                    android:id="@+id/dailyAnnouncementsBtn"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:src="@android:drawable/ic_menu_gallery" />
            </TableRow>

            <TableRow android:layout_weight=".3">

                <ImageButton
                    android:id="@+id/foodMenuBtn"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:src="@android:drawable/ic_menu_add" />

                <ImageButton
                    android:id="@+id/terrierBucksBtn"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:src="@android:drawable/ic_menu_call" />

                <ImageButton
                    android:id="@+id/settingsBtn"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:src="@android:drawable/ic_menu_my_calendar" />

            </TableRow>
        </TableLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
