<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.wofford.sykesda.wocoapptest.Restaurant_discount">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/imageView6"
        android:layout_below="@+id/imageView6"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/ic_buffalowings" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lemon_grass2"
        android:layout_marginStart="19dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/ic_bojangles" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/imageView6"
        android:layout_below="@+id/monsoon2"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/ic_lemongrass" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView5"
        android:layout_marginTop="49dp"
        app:srcCompat="@drawable/ic_monsoon" />


    <TextView
        android:id="@+id/monsoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:text="Monsoon"
        android:textAlignment="center"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/lemon_grass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5"
        android:text="Lemon Grass"
        android:textAlignment="center"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/bestbuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView5"
        android:text="Bojangles"
        android:textAlignment="center"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/dell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:text="Buffalo Wings"
        android:textAlignment="center"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/monsoon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignEnd="@+id/lemon_grass2"
        android:layout_toEndOf="@+id/imageView4"
        android:text="Free drink with ID"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/lemon_grass2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_alignEnd="@+id/bestbuy"
        android:layout_toEndOf="@+id/imageView5"
        android:text="10% off with ID"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/bojangles1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView"
        android:text="10% off with ID"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/buffalowings1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView"
        android:text="Nationwide discount"
        android:textAlignment="center"
        android:textSize="15sp"
        tools:text="15% off with ID" />


</RelativeLayout>