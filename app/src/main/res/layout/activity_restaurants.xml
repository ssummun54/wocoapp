<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >


    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terrier Bucks Accepted"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3">

            <Button
                android:id="@+id/clientimain"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="papa_menu"
                android:text="Papa John's"
                android:textAllCaps="false"
                android:textStyle="bold" />


            <Button
                android:id="@+id/button1"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="papa_direction"
                android:text="@string/restaurants_maps_open"
                android:textAllCaps="false"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3" >

            <Button
                android:id="@+id/button2"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="cribbs_menu"
                android:text="Cribb's Kitchen"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button6"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="cribbs_direction"
                android:text="@string/restaurants_maps_open"
                android:textAllCaps="false"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3df5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3" >

            <Button
                android:id="@+id/button3gh"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="monarchs_menu"
                android:text="Monarch's Cafe"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button7sg"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="monarchs_direction"
                android:text="@string/restaurants_maps_open"
                android:textAllCaps="false"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRowd344"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3" >

            <Button
                android:id="@+id/button3gm"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="lime_leaf_menu"
                android:text="Lime Leaf"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button7vv"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="lime_leaf_direction"
                android:text="@string/restaurants_maps_open"
                android:textAllCaps="false"
                android:textStyle="bold" />

        </TableRow>

    </TableLayout>

</RelativeLayout>